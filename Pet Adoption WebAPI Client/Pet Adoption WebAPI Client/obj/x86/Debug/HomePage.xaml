<Page
    x:Class="Pet_Adoption_WebAPI_Client.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pet_Adoption_WebAPI_Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,10">
            <TextBlock Text="🐾 Welcome to Pet Adoption App!" FontSize="32" 
                       FontWeight="Bold" Foreground="#FF4A90E2" TextAlignment="Center"/>
            <TextBlock Text="Find your furry friend and give them a loving home!" 
                       FontSize="18" Foreground="Gray" TextAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <TextBlock Text="Every pet deserves a second chance. Here, you can browse through a variety of loving pets looking for their forever home. Whether you're looking for a playful pup 🐶, a cuddly cat 🐱, or a unique companion, you'll find them here!" 
                       FontSize="18" Foreground="Black" TextWrapping="Wrap" TextAlignment="Center" Margin="0,10,0,10"/>

            <TextBlock Text="Start your journey today by exploring available pets and making a difference in their lives!" 
                       FontSize="18" FontWeight="Bold" Foreground="Black" TextWrapping="Wrap" TextAlignment="Center" Margin="0,10,0,20"/>

            <Button x:ConnectionId='2' Content="🐕 View Available Pets" FontSize="20"
                    Background="#FF4A90E2" Foreground="White" Padding="14,10"
                    CornerRadius="8"                          
                    HorizontalAlignment="Center" Width="250"/>
        </StackPanel>

       
        <TextBlock Grid.Row="2" Text="Made with ❤️ for all pet lovers!"
                   FontSize="16" Foreground="Gray" HorizontalAlignment="Center" 
                   Margin="0,30,0,0"/>
    </Grid>
</Page>

